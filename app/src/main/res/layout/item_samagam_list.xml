<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    app:strokeWidth="@dimen/_2sdp"
    app:strokeColor="@color/blue"
    app:cardCornerRadius="@dimen/_8sdp"
    android:layout_width="@dimen/_85sdp"
    android:layout_height="wrap_content">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent=".25"
                android:orientation="vertical"
                android:id="@+id/guide_v_25"/>
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent=".75"
                android:orientation="vertical"
                android:id="@+id/guide_v_75"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_13sdp"
                android:id="@+id/viewBlue"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/blue"
                android:layout_marginTop="@dimen/_10sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_13sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/white"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="@id/guide_v_25"
                />
            <com.google.android.material.card.MaterialCardView
                android:layout_width="@dimen/_8sdp"
                android:layout_height="@dimen/_13sdp"
                app:layout_constraintTop_toTopOf="parent"
                android:backgroundTint="@color/white"
                app:layout_constraintEnd_toEndOf="@id/guide_v_75"
                android:layout_marginTop="@dimen/_5sdp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_24sdp"
                tools:text = "45"
                android:gravity="center"
                android:id="@+id/tvDate"
                android:textColor="#F49000"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:includeFontPadding="false"
                style="@style/textSemibold"
                android:layout_marginTop="@dimen/_3sdp"
                app:layout_constraintTop_toBottomOf="@id/viewBlue"/>

            <TextView
                android:id="@+id/tvMonth"
                style="@style/textSemibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center
"               android:includeFontPadding="false"
                android:layout_marginBottom="@dimen/_5sdp"
                app:layout_constraintBottom_toTopOf="@id/view"
                android:textColor="@color/blue"
                android:textSize="@dimen/_11sdp"
                android:layout_marginTop="-6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDate"
                tools:text="Aug 2026 " />


        <!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:id="@+id/tvTitle"-->
<!--            android:layout_marginBottom="@dimen/_5sdp"-->
<!--            android:layout_marginTop="@dimen/_5sdp"-->
<!--            style="@style/textMedium"-->
<!--            app:layout_constraintTop_toTopOf="parent"-->
<!--            android:textColor="@color/black_light"-->
<!--            android:textSize="@dimen/_15sdp"-->
<!--            app:layout_constraintBottom_toTopOf="@id/view"-->
<!--            android:layout_marginStart="@dimen/_5sdp"-->
<!--            android:layout_marginEnd="@dimen/_5sdp"-->
<!--            android:text="@string/audio"-->
<!--            android:gravity="center" app:layout_constraintStart_toStartOf="parent"-->
<!--            app:layout_constraintEnd_toEndOf="parent"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@color/blue"
            android:id="@+id/view"
            app:layout_constraintTop_toBottomOf="@id/tvMonth"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Samagam"
            app:layout_constraintTop_toTopOf="@id/view"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/textMedium"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/white"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
