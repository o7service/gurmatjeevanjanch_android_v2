<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white">
        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:id="@+id/clHome"
            android:visibility="visible"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            tools:context=".fragments.HomeFragment">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/app_icon"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_17sdp"
                android:id="@+id/ivAppIcon"
                app:layout_constraintBottom_toTopOf="@id/cardPager"
                app:layout_constraintEnd_toEndOf="parent"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp"
                app:layout_constraintStart_toEndOf="parent"
                android:id="@+id/cardPager"
                android:elevation="@dimen/_10sdp"
                app:cardElevation="@dimen/_10sdp"
                app:layout_constraintTop_toBottomOf="@id/ivAppIcon"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white">
                <androidx.viewpager2.widget.ViewPager2
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/viewPager"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                app:tabIndicatorColor="@android:color/transparent"
                app:tabGravity="center"
                android:visibility="gone"
                app:tabMode="fixed"
                app:tabIndicatorHeight="0dp"
                app:layout_constraintTop_toBottomOf="@id/cardPager"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_10sdp"
                android:id="@+id/liveSmagam"
                app:strokeColor="@color/black"
                app:strokeWidth="@dimen/_1sdp"
                app:cardCornerRadius="@dimen/_10sdp"
                android:layout_marginHorizontal="@dimen/_12sdp"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardPager">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_livesmagambg"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:padding="10dp">
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_live" />

                        <TextView
                            style="@style/TextStyleF15WhiteColorRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="10dp"
                            android:layout_weight="1"
                            android:text="@string/zoom_live" />

                        <ImageView
                            android:id="@+id/icZoomForward"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_22sdp"
                            android:layout_gravity="center"
                            android:layout_weight="5"
                            android:src="@drawable/ic_hand" />

                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                android:id="@+id/cardZoom"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:backgroundTint="#f7b500"
                app:strokeWidth="@dimen/_1sdp"
                app:strokeColor="#D0D0D0"
                android:visibility="gone"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_12sdp"
                app:layout_constraintTop_toBottomOf="@id/tabLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="@dimen/_3sdp">
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:src="@drawable/zoom_icon_svg2"
                        android:layout_marginEnd="@dimen/_10sdp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvLiveKirtan"
                        app:layout_constraintBottom_toBottomOf="parent" />
                    <TextView android:layout_width="wrap_content"
                        android:layout_height="@dimen/_35sdp"
                        android:text="Live Kirtan"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:textColor="@color/black_light"
                        style="@style/textMedium"
                        android:gravity="center"
                        android:id="@+id/tvLiveKirtan"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textSize="@dimen/_20sdp"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toEndOf="@id/ivZoom"
                        />
                    <ImageView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_33sdp"
                        android:src="@drawable/ic_click"
                        android:id="@+id/ivClick"
                        app:tint = "@color/white"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginEnd="@dimen/_20sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/zoom_logo_svg"
                    android:id="@+id/ivZoom"
                    android:visibility="gone"
                    android:layout_marginEnd="@dimen/_40sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />
        <!--        <TextView-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="@string/zoom"-->
        <!--            android:textColor="#2196f3"-->
        <!--            android:layout_gravity="center"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            android:gravity="center"-->
        <!--            android:textStyle="italic"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintTop_toTopOf="parent"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            android:layout_marginStart="@dimen/_20sdp"-->
        <!--            android:fontFamily="@font/poppins_bold"-->
        <!--            android:textSize="@dimen/_35sdp"/>-->
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_with_us"
                android:textSize="@dimen/_13sdp"
                style="@style/textMedium"
                android:textColor="@color/black_light"
                android:layout_marginTop="@dimen/_15sdp"
                app:layout_constraintTop_toBottomOf="@id/liveSmagam"
                app:layout_constraintBottom_toTopOf="@id/recyclerView"
                app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/tvConnectWithUs"
                app:layout_constraintEnd_toEndOf="parent"
                />
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvConnectWithUs"
                android:id="@+id/recyclerView"/>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                android:backgroundTint="@color/white"
                android:id="@+id/clCurrentMusic"
                app:strokeWidth="@dimen/_2sdp"
                app:strokeColor="@color/blue"
                android:layout_marginHorizontal="@dimen/_12sdp"
                app:cardCornerRadius="@dimen/_8sdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_18sdp"
                app:layout_constraintTop_toBottomOf="@id/recyclerView">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                    android:layout_width="@dimen/_29sdp"
                    android:layout_height="@dimen/_29sdp"
                    android:src="@drawable/ic_solid_play"
                    android:id="@+id/circularView"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="@dimen/_10sdp" />

                <androidx.constraintlayout.widget.Barrier
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barrierTitle"
                    app:barrierMargin="@dimen/_5sdp"
                    app:constraint_referenced_ids="circularView"
                    app:barrierDirection="end" />

                <androidx.constraintlayout.widget.Barrier
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/barrierPlay"
                    app:constraint_referenced_ids="ivPlay"
                    app:barrierDirection="start" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text = "Jaapji Sahib Path(128k) - By Amarjit Singh Ji"
                    android:id="@+id/tvPlayTitle"
                    app:layout_constraintStart_toEndOf="@id/barrierTitle"
                    android:textColor="@color/black_light"
                    app:layout_constraintTop_toTopOf="parent"
                    style="@style/textMedium"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:layout_constraintEnd_toStartOf="@id/barrierPlay"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:textSize="@dimen/_10sdp"
                    android:maxLines="2"
                    />

                <ImageView
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:src="@drawable/ic_play_audio_home"
                    android:id="@+id/ivPlay"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="center"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_margin="@dimen/_10sdp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>
                </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>