<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background track -->
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <size android:height="0.25dp" /> <!-- Height of the SeekBar -->
            <corners android:radius="10dp" /> <!-- Rounded corners -->
            <solid android:color="#D3D3D3"/> <!-- Light gray background -->
        </shape>
    </item>

    <!-- Progress bar -->
    <item android:id="@android:id/progress">
        <clip>
            <shape android:shape="rectangle">
                <size android:height="0.25dp" />
                <corners android:radius="10dp" />
                <solid android:color="@color/black_light"/> <!-- e.g. @color/teal_700 -->
            </shape>
        </clip>
    </item>
</layer-list>
